{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile in the system.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID from Firebase Auth."
        },
        "name": {
          "type": "string",
          "description": "The user's full name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "photoURL": {
          "type": "string",
          "format": "uri",
          "description": "URL for the user's profile picture."
        },
        "role": {
          "type": "string",
          "enum": ["seeker", "expert", "dual"],
          "description": "The role of the user."
        },
        "bio": {
          "type": "string",
          "description": "A short biography of the user."
        },
        "title": {
          "type": "string",
          "description": "The user's professional title or headline."
        }
      },
      "required": ["uid", "name", "email"]
    }
  },
  "auth": {
    "providers": ["google", "password"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores public user profile information."
    }
  }
}
